{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "rewrites": [
    {
      "source": "/news/:slug*",
      "destination": "/api/og?type=news&slug=:slug&url=https://autamubilismo.com/news/:slug",
      "has": [
        {
          "type": "header",
          "key": "user-agent",
          "value": ".*(facebookexternalhit|facebot|whatsapp|twitterbot|telegrambot|discordbot|slackbot|linkedinbot|embedly|pinterest|preview|crawler|spider|bot).*"
        }
      ]
    },
    {
      "source": "/articles/:slug*",
      "destination": "/api/og?type=article&slug=:slug&url=https://autamubilismo.com/articles/:slug",
      "has": [
        {
          "type": "header",
          "key": "user-agent",
          "value": ".*(facebookexternalhit|facebot|whatsapp|twitterbot|telegrambot|discordbot|slackbot|linkedinbot|embedly|pinterest|preview|crawler|spider|bot).*"
        }
      ]
    },
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, s-maxage=300, stale-while-revalidate=86400"
        }
      ]
    }
  ]
}

