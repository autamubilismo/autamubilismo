{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "functions": {
    "api/og.js": {
      "runtime": "nodejs18.x"
    }
  },
  "rewrites": [
    {
      "source": "/news/:slug*",
      "destination": "/api/og?type=news&slug=:slug&url=https://www.autamubilismo.com/news/:slug",
      "has": [
        {
          "type": "header",
          "key": "user-agent",
          "value": ".*(facebookexternalhit|facebot|WhatsApp|whatsapp|Twitterbot|twitterbot|TelegramBot|telegrambot|Discordbot|discordbot|Slackbot|slackbot|LinkedInBot|linkedinbot|embedly|pinterest|preview|crawler|spider|bot).*"
        }
      ]
    },
    {
      "source": "/articles/:slug*",
      "destination": "/api/og?type=article&slug=:slug&url=https://www.autamubilismo.com/articles/:slug",
      "has": [
        {
          "type": "header",
          "key": "user-agent",
          "value": ".*(facebookexternalhit|facebot|WhatsApp|whatsapp|Twitterbot|twitterbot|TelegramBot|telegrambot|Discordbot|discordbot|Slackbot|slackbot|LinkedInBot|linkedinbot|embedly|pinterest|preview|crawler|spider|bot).*"
        }
      ]
    },
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, s-maxage=300, stale-while-revalidate=86400"
        }
      ]
    }
  ]
}
